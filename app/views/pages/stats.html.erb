<div class="sticky-top">
  <div class="banner banner-bg py-5" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url('<%= image_path "pexels-photo-1552242.webp" %>')">
    <div class="container text-center">
     <img class="avatar-large" alt="avatar-large" src="https://kitt.lewagon.com/placeholder/users/<%= current_user.username %>">
      <h1>@<%= current_user.username %></h1>
    </div>
  </div>
  <div class="navbar navbar-expand-sm navbar-light navbar-lewagon navbar-bottomborder mx-2">
    <div class="container-fluid">
      <%= link_to "About", profile_path, class: "nav-link" %>
      <%= link_to "My Challenges", dashboard_path, class: "nav-link" %>
      <%= link_to "History", history_path, class: "nav-link" %>
      <%= link_to "Stats", stats_path, class: "nav-link active-tab" %>
    </div>
  </div>
</div>

<div class="stats-box">
  <div class="stats-container stats-cards">
    <%# <div class="d-flex justify-content-center align-items-center"> %>
      <div class="text-center my-2">
        <i class="fas fa-biking px-3 py-0 m-2 stats-icons"></i>
         <div>
          <p>Current Challenges</p>
        </div>
        <div>
          <%= @my_current_challenges.count %>
        </div>
      </div>

      <div class="text-center my-2">
        <i class="far fa-check-circle px-3 py-0 m-2 stats-icons"></i>
        <div>
         <p>Completed Challenges</p>
        </div>
        <div>
          <%= @my_past_challenges.count %>
        </div>
      </div>
    <%# </div> %>

    <%# <div class="d-flex justify-content-center align-items-center"> %>
      <div class="text-center my-2">
        <i class="fas fa-camera-retro px-3 py-0 m-2 stats-icons"></i>
        <div>
         <p>Exercises Posted</p>
        </div>
        <div>
          <%= @exercises.count %>
        </div>
      </div>

      <div class="text-center my-2">
        <i class="fas fa-dumbbell px-3 py-0 m-2 stats-icons"></i>
        <div>
         <p>Challenges Created</p>
        </div>
        <div>
          <%= @challenges.count %>
        </div>
      </div>
    <%# </div> %>
  </div>
</div>
