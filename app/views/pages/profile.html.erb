<div class="sticky-top">
  <div class="banner banner-bg py-5" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url('<%= image_path "pbg.jpg" %>')">
    <div class="container text-center">
     <img class="profile-avatar-large m-3 avatar-profile" alt="avatar-large" src="https://kitt.lewagon.com/placeholder/users/<%= current_user.username %>">
      <h1 class="profile-user">@<%= current_user.username %>
      <%= link_to edit_user_registration_path do %>
        <i class="far fa-edit color-edit small-edit"></i>
      <% end %></h1>
    </div>
  </div>
  <div class="navbar navbar-expand-sm navbar-light navbar-lewagon navbar-bottomborder mx-2">
    <div class="container-fluid">
      <%= link_to "About", profile_path, class: "nav-link active-tab" %>
      <%= link_to "My Challenges", dashboard_path, class: "nav-link" %>
      <%= link_to "History", history_path, class: "nav-link" %>
      <%= link_to "Stats", stats_path, class: "nav-link" %>
    </div>
  </div>
</div>


<div class="about-container my-4">
  <div class="about">
    <div class="d-flex justify-content-center align-items-center m-3">
      <div class="about-title-box">
        <h1 class="form-font"><%= current_user.name %> | <%= current_user.age %></h1>
      </div>
    </div>

    <div class="about-cards">
      <div class="d-flex justify-content-center about-card">
        <div>
          <div class="about-point-box">
            <h2 class="text-center about-points">@</h2>
          </div>
          <div class="about-data">
            <p><%= current_user.email %></p>
          </div>
        </div>
      </div>

      <div class="d-flex justify-content-center about-card">
        <div>
          <div class="text-center about-point-box">
            <%= image_tag ("geocoding_marker_1.png"), class: "location" %>
          </div>
          <div class="about-data">
            <p><%= current_user.location %></p>
          </div>
        </div>
      </div>

      <div class="d-flex justify-content-center about-card">
        <div>
          <div class="text-center about-point-box">
            <%= image_tag ("dumbell.png"), class: "fav-exercise" %>
          </div>
          <div class="about-data">
            <p><%= current_user.favourite %></p>
          </div>
        </div>
      </div>
    </div>

  </div>

</div>

<div class="cards-box-about">
  <div class="about-big-cards m-3">
    <div class="about-big-card d-flex flex-column justify-content-center align-items-center">
      <div class="d-flex justify-content-center align-items-center me-3 my-2">
        <p class="about-bio">I have been a member of Invitness since <strong><%= current_user.created_at.strftime("%B %Y") %></strong>. My favourite exercise is <strong><%= current_user.favourite %></strong>! I have completed <strong><%= @my_past_challenges.count %></strong> challenges. I am currently in <strong><%= @my_current_challenges.count %></strong> challenges!  </p>
      </div>
    </div>
  </div>
</div>


<div class="text-center social-container">
  <i class="fab fa-facebook social"></i>
  <i class="fab fa-instagram social"></i>
  <i class="fab fa-twitter social"></i>
</div>

<div class="sign-out m-0 p-0 fs-6 text d-flex justify-content-end">
  <%= link_to destroy_user_session_path, method: :delete, data: { confirm: "Are you sure?" }, class: "color-edit m-1" do %>
    <p class="color-edit m-1">Sign Out</p>
  <% end %>
</div>
